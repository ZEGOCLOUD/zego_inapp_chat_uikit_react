{
  "compilerOptions": {
    "target": "ES6",
    "module": "esnext",
    "moduleResolution": "Node",
    "jsx": "preserve",
    "lib": [
      "esnext",
      "dom",
      "es2015",
      "es2016"
    ],
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "src/ZIMKit/node_modules",
    "src/ZIMKit/dist",
    "src/ZIMKit/npm"
  ]
}
